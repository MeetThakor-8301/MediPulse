@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner Section -->
<section class="d-flex align-items-center min-vh-100" id="home">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <div class="banner-section fade-in">
                    <h5 class="mb-3">Advanced Hospital Management Solutions</h5>
                    <h2 class="my-4">Efficient & Reliable Healthcare<br>For a Better Tomorrow</h2>
                    <p class="lead my-4">
                        Our hospital management system streamlines patient care, appointment
                        scheduling, and medical records, ensuring a seamless healthcare experience. Trusted by top
                        medical institutions worldwide.
                    </p>
                    <a href="#doctors" class="btn bookappointmentbtn">
                        <i class="fas fa-calendar-check me-2"></i>Book an Appointment
                    </a>
                </div>
            </div>
            <div class="col-md-6 fade-in">
                <img src="~/images/Hero_Section/banner_img.svg" alt="Doctor Illustration" class="img-fluid">
            </div>
        </div>
    </div>
</section>

